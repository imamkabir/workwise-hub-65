APP_NAME="Iconic Portal"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=iconic_portal
DB_USERNAME=root
DB_PASSWORD=

# For local development with SQLite, uncomment below and comment MySQL above
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=30
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="admin@iconicportal.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# CORS Configuration - Frontend URL
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,docx,doc,mp3,mp4,avi,mov,png,jpg,jpeg,gif

# Super Admin Account (CANNOT BE DELETED)
SUPER_ADMIN_EMAIL=imamkabir397@gmail.com
SUPER_ADMIN_PASSWORD=1234567890
SUPER_ADMIN_NAME="Imam Kabir"

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173

# Security Features (Bruce Wayne Mode)
TWO_FACTOR_ENABLED=true
SESSION_TIMEOUT_ADMIN=30
SESSION_TIMEOUT_USER=120
AUDIT_LOG_ENABLED=true
FORCE_LOGOUT_ENABLED=true

# Notification Webhooks
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
ADMIN_EMAIL_ALERTS=true

# System Monitoring
SYSTEM_MONITORING_ENABLED=true
BACKUP_ENABLED=true
MAINTENANCE_MODE_ENABLED=false
REAL_TIME_MONITORING=true

# File Storage
STORAGE_PATH=storage/app/uploads
TEMP_URL_EXPIRY=3600

# Activity Monitoring
TRACK_USER_ACTIVITY=true
TRACK_LOGIN_ATTEMPTS=true
TRACK_FILE_ACCESS=true

# Theme Control
ALLOW_THEME_SWITCHING=true
DEFAULT_THEME=dark

# Feature Toggles
SIGNUP_ENABLED=true
DOWNLOADS_ENABLED=true
AD_WATCHING_ENABLED=true
PAYMENTS_ENABLED=true